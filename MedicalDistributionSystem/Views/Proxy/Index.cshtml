@{
    Layout = "~/Views/Shared/_LayoutForApp.cshtml";
    ViewBag.Title = "代理列表";
}

<div style="border-radius:5px;width:98%;height:80px;margin-top:5px;margin-bottom: 5px;margin-left:auto;margin-right:auto;border:solid 1px #009688;">
    <div style="width:auto;height:auto;margin-left:auto;margin-right:auto;margin-top:20px;float:left">
        <div class="layui-form-item">
            <label class="layui-form-label">代理姓名</label>
            <div class="layui-input-block">
                <input type="text" name="ProxyName" required lay-verify="required" placeholder="请输入代理姓名" autocomplete="off" class="layui-input">
            </div>
        </div>
    </div>
    <div style="width:auto;height:auto;margin-left:auto;margin-right:auto;margin-top:20px;float:left">
        <div class="layui-form-item">
            <label class="layui-form-label">手机号</label>
            <div class="layui-input-block">
                <input type="tel" name="Phone" required lay-verify="required" placeholder="请输入手机号" autocomplete="off" class="layui-input">
            </div>
        </div>
    </div>
    @*<div style="width:auto;height:auto;margin-left:auto;margin-right:auto;margin-top:20px;float:left">
        <div class="layui-form-item">
            <label class="layui-form-label">代理级别</label>
            <div class="layui-input-block">
                <input type="text" name="ProxyLevel" required lay-verify="required" placeholder="请输入代理级别" autocomplete="off" class="layui-input">
            </div>
        </div>
    </div>*@
    <div style="width:auto;height:auto;margin-left:10px;margin-right:auto;margin-top:20px;float:left">
        <div class="layui-form-item">
            <button id="search" class="layui-btn layui-btn-radius">Search</button>
        </div>
    </div>
    <div style="width:auto;height:auto;margin-left:10px;margin-right:auto;margin-top:20px;float:left">
        <div class="layui-form-item">
            <button id="create" class="layui-btn layui-btn-radius layui-btn-normal">Create</button>
        </div>
    </div>
</div>
<div style="width:98%;min-height:500px;height:500px;margin-top:5px;margin-bottom: 20px;margin-left:auto;margin-right:auto">

    <table id="dataTable" lay-filter="dataTb"></table>
    <script src="~/Scripts/layui/layui.js"></script>
    <script src="~/Scripts/lib/datefmt.js"></script>
    <script src="~/Scripts/require.js" data-main="/Scripts/proxy"></script>
    <link href="~/Scripts/layui/css/modules/layer/default/layer.css" rel="stylesheet" />
    <script type="text/html" id="toolbar">
        <a class="layui-btn layui-btn layui-btn-xs" lay-event="detail">查看</a>
        <a class="layui-btn layui-btn-warm layui-btn-xs" lay-event="edit">编辑</a>
        <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
    </script>
</div>